<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForActivity">


    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/colorPrimary"
        app:pstsDividerColor="@color/colorForDialogs"
        app:pstsIndicatorColor="#FF33B5E6"
        app:pstsTabPaddingLeftRight="35dip"
        app:pstsTabTextColor="@android:color/white"
        app:pstsUnderlineColor="@color/colorItem"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_pressed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabs">


    </android.support.v4.view.ViewPager>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnAdd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        fancy:fb_defaultColor="@color/colorPrimary"
        fancy:fb_focusColor="@android:color/white"
        fancy:fb_iconResource="@mipmap/ic_plus"
        fancy:fb_radius="64dp" />

</RelativeLayout>