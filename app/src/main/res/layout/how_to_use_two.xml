<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:padding="16dp"
            android:text="For example: enter workout name - 'pullups', weight (kilograms) - '10', Approaches (amount) - '15', Repetition (repeat) - '3'." />

        <ImageView
            android:id="@+id/image_n1"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView10"
            android:src="@drawable/example_min" />

        <TextView
            android:id="@+id/tv_n2"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_n1"
            android:lineSpacingMultiplier="1.2"
            android:padding="16dp"
            android:text="Make a long click on the item." />

        <ImageView
            android:id="@+id/im_n3"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_n2"
            android:src="@drawable/delete_min" />

        <TextView

            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_n3"
            android:lineSpacingMultiplier="1.2"
            android:padding="16dp"
            android:text="In order to cancel an action click on any part of the screen or make a long click on another exercise" />

    </RelativeLayout>
</ScrollView>